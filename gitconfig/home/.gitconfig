[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[credential]
	helper = manager
[user]
	name = Ally Parker
	email = ally.parker@red-gate.com
[alias]
	cm = checkout main
	cob = "!f(){ git checkout -b $1; }; f"
	rc = rebase --continue
	ra = rebase --abort
	rhm = reset --hard origin/main
	rh = "!f(){ git reset --hard; git clean -f; }; f"
	ru = remote update --prune
	kill = "!f() { git branch --merged ${1-main} | grep -v " ${1-main}$" | xargs -r git branch -D; }; f"
	p = "!f(){ git checkout main; git ru; git rhm; }; f"
	shove = push --force-with-lease
	graph = log --oneline --graph
	new = !git init && git symbolic-ref HEAD refs/heads/main
[merge]
	keepBackup = false;
	tool = p4merge
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "p4merge"]
[diff]
	tool = p4merge
[difftool]
	prompt = false
	keepBackup = false
[difftool "p4merge"]
[rerere]
	enabled = true
	autoupdate = true
[help]
	autocorrect = 1
[pull]
	rebase = true
[core]
	excludesfile = ~/.gitignore
